@model WebProject.Models.UserB

@{
    ViewBag.Title = "HavePayMethod";
}
<link href="~/css/WebsiteLayout.css" rel="stylesheet" />
<h2>You have saved pay method</h2>


<table class="table transBack">
    <tr>
        <th>Card Number</th>
        <th>Exp Date</th>
        <th>CVV</th>
        <th></th>
    </tr>
    @foreach (var item in Model.PayMethods)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CardNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ExpDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CVV)
            </td>
            <td>
                @Html.ActionLink("Pay", "SavedPay", new { id = item.ID })
            </td>
        </tr>
    }
</table>

<p>
    <input type="button" value="Pay with different card" onclick="location.href = '@Url.Action("Pay")'" class="transBtn" />
</p>


