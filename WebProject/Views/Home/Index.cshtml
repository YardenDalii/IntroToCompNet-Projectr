@model IEnumerable<WebProject.Models.Flight>

@{
    ViewBag.Title = "Home Page";
}
<link href="~/css/WebsiteLayout.css" rel="stylesheet" />

<body>

    <div style="margin-bottom: 70px">
        <h1>Book a flight now</h1>
        <input type="button" value="Book a flight now!" onclick="location.href = '@Url.Action("Book")'" class="transBtn" />

    </div>
    <hr />
    <div style="border-radius: 20px;" class="transBack">
        <h2 style="text-align:center;">All Available Flights</h2>
        <table class="table">
            <tr>
                <th>
                    
                    @Html.ActionLink("From", "Index", new { sortOrder = ViewBag.FromSortParm })
                </th>
                <th>
                    @Html.ActionLink("Destination", "Index", new { sortOrder = ViewBag.ToSortParm })
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DepTime)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ArrTime)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SeatCap)
                </th>
                <th>
                    @Html.ActionLink("Price", "Index", new { sortOrder = ViewBag.PriceSortParm })
                </th>
                <th></th>

            </tr>

            @foreach (var item in Model)
            {
                if (DateTime.Compare(DateTime.Today, item.DepTime) <= 0)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.From)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.To)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DepTime)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ArrTime)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SeatCap)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Price) ₪
                        </td>


                    </tr>
                }
            }

        </table>
    </div>



</body>

