@model IEnumerable<WebProject.Models.UserB>

@{
    ViewBag.Title = "Index";
}

<h2>Users List</h2>

<p>
    <input type="button" value="Create New" onclick="location.href = '@Url.Action("Create")'" style="background-color: rgb(15 15 15 / 0.8); border-radius: 20px; color: white; border-color: rgb(192 188 188);" />
</p>

<table class="table" style="background-color: rgb(212 202 201 / 0.60)">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FullName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FullName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>

<div>
    <input type="button" value="Back to Control Panel" onclick="location.href = '@Url.Action("Administration", "Admins")'" style="background-color: rgb(15 15 15 / 0.8); border-radius: 20px; color: white; border-color: rgb(192 188 188);" />
</div>
